{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "lib": ["ES2022", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUncheckedIndexedAccess": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.txt",
    "src/sample-advanced-types.ts",
    "src/sample-decorators.ts",
    "src/sample-edge-cases.ts",
    "src/sample-generics.ts",
    "src/sample-modules.ts",
    "src/error.ts",
    "src/invalid.ts",
    "src/hello.ts",
    "src/valid.ts",
    "src/pending.ts",
    "src/new-file.ts",
    "src/perf-test.ts",
    "src/perf-test-warm.ts",
    "src/watch-perf-test.ts",
    "src/rapid-*.ts"
  ]
}
